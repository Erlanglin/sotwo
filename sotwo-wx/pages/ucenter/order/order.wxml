<view class="container">
    <view class="orders-switch">
        <view class="item {{ showType == 3 ? 'active' : ''}}" bindtap="switchTab" data-index='3'>
            <view class="txt">全部</view>
        </view>
        <view class="item {{ showType == 0 ? 'active' : ''}}" bindtap="switchTab" data-index='0'>
            <view class="txt">待结算</view>
        </view>
        <view class="item {{ showType == 1 ? 'active' : ''}}" bindtap="switchTab" data-index='1'>
            <view class="txt">已结算</view>
        </view>
        <view class="item {{ showType == 2 ? 'active' : ''}}" bindtap="switchTab" data-index='2'>
            <view class="txt">待评价</view>
        </view>
    </view>
    <view class="no-order" wx:if="{{consumeLogList.length <= 0}}">
      <view class="c">
        <image src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/noCart-a8fe3f12e5.png" />
        <text>还没有任何账单呢</text>
      </view>
    </view>

    <view class="orders">
      <navigator url="../consumeLogList?id={{item.id}}" class="order" wx:for="{{consumeLogList}}" wx:key="id">
            <view class="h">
                <view class="l">账单编号：{{item.id}}</view>
                <view class="r">{{item.addTime}}</view>
            <view class="info">
                <text class="name">{{item.consumeTitle}}</text>
                <text class="number">共{{count}}件商品</text>
            </view>
            <view class="status"></view>
            <view class="b">
                <view class="l">实付：￥{{item.price}}</view>
            </view>
            </view>
      </navigator>
    </view>
</view>
